<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dimen_8"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_margin="@dimen/dimen_6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="205dp"
        android:layout_height="330dp">

        <ImageView
            android:id="@+id/image_arrival"
            android:layout_width="190dp"
            android:layout_height="210dp"
            android:background="@drawable/tshirt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name_one_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hype Park"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_arrival" />

        <TextView
            android:id="@+id/name_two_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="N41015"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/name_one_arrival"
            app:layout_constraintTop_toBottomOf="@+id/name_one_arrival" />

        <TextView
            android:id="@+id/quality_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4"
            android:text="LOUIS VUITTON"
            app:layout_constraintLeft_toLeftOf="@+id/name_one_arrival"
            app:layout_constraintTop_toBottomOf="@+id/name_two_arrival" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80FCE4EC"
            android:layout_marginTop="@dimen/dimen_4"
            app:layout_constraintLeft_toLeftOf="@+id/name_one_arrival"
            app:layout_constraintTop_toBottomOf="@id/quality_arrival" />

        <RatingBar
            android:id="@+id/rate_bar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressTint="#E6F4511E"
            android:rating="4"
            android:layout_marginTop="@dimen/dimen_16"
            app:layout_constraintLeft_toLeftOf="@id/name_one_arrival"
            app:layout_constraintTop_toBottomOf="@+id/quality_arrival"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width= "1dp"
            android:layout_height="50dp"
            android:background="#80FCE4EC"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line"
            app:layout_constraintLeft_toRightOf="@id/rate_bar" />

        <TextView
            android:id="@+id/price_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999,9999"
            android:layout_marginRight="@dimen/dimen_4"
            android:textColor="#E6F4511E"
            android:textSize="16sp"
            app:layout_constraintRight_toLeftOf="@id/txt_kyat"
            app:layout_constraintTop_toTopOf="@id/txt_kyat"
            app:layout_constraintBottom_toBottomOf="@id/txt_kyat"/>

        <TextView
            android:id="@+id/txt_kyat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_10"
            android:text="KS"
            android:textColor="#E6F4511E"
            android:textSize="16sp"
            app:layout_constraintRight_toRightOf="@id/horizontal_line"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line" />

        <TextView
            android:id="@+id/strikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1100000KS"
            android:background="@drawable/strike"
            android:layout_marginLeft="@dimen/dimen_4"
            android:layout_marginBottom="2dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_kyat"
            app:layout_constraintRight_toRightOf="@id/txt_kyat"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
