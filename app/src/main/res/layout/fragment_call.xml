<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CallFragment">

    <ImageView
        android:id="@+id/img_brand"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/brand"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEED HELP?"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintVertical_bias="0.22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/img_brand"/>

    <TextView
        android:id="@+id/txt_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="CUSTOMER SERVICE"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_help"
        app:layout_constraintLeft_toLeftOf="@id/txt_help"/>

    <Button
        android:id="@+id/btn_brand"
        android:layout_width="130dp"
        android:layout_height="28dp"
        android:text="CALL NOW"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txt_service"
        app:layout_constraintLeft_toLeftOf="@id/txt_service"
        android:background="#ff3d00" />

</androidx.constraintlayout.widget.ConstraintLayout>