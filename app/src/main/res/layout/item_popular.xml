<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="6dp"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_margin="@dimen/dimen_4"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

    <Button
        android:id="@+id/btn_new"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/dimen_8"
        android:background="@drawable/corner_new"
        android:text="NEW"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_discount"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/dimen_8"
        android:background="@drawable/corner_discount"
        android:text="30% off"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/btn_new"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="GhostedBed 11 inch Cooling Gel Memory Foam...... "
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_discount" />

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/dimen_16"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_product_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_4"
        android:text="Apple"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@id/txt_product_name" />

    <RatingBar
        android:id="@+id/rate_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:progressTint="#E6F4511E"
        android:rating="4"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintLeft_toLeftOf="@id/txt_product_name"
        app:layout_constraintTop_toBottomOf="@+id/brand_name"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="190dp"
        android:layout_height="10dp"
        android:background="@drawable/line"
        app:layout_constraintTop_toBottomOf="@id/rate_bar"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/price_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="980000"
        android:textColor="#E6F4511E"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/txt_product_name"
        app:layout_constraintLeft_toRightOf="@+id/rate_bar"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/popular_kyat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_4"
        android:text="KS"
        android:textColor="#E6F4511E"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/price_popular"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <TextView
        android:id="@+id/strike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1100000KS"
        android:background="@drawable/strike"
        android:layout_marginLeft="@dimen/dimen_8"
        app:layout_constraintLeft_toRightOf="@id/popular_kyat"
        app:layout_constraintBottom_toBottomOf="@id/popular_kyat"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>